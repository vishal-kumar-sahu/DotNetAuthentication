@model IEnumerable<DotNetAuthentication.Models.Profiles>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Profile List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Profiles" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Profile
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Platform
                </th>
                <th>
                    Link
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Platform
                    </td>
                    <td width="50%">
                        @obj.Link
                    </td>
                    <td width="50%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Profiles" asp-action="Edit" asp-route-id="@obj.ProfileId"
                               class="btn btn-primary mx-2"> <sapn><i class="bi bi-pencil-square"></i></sapn> Edit</a>

                            <a asp-controller="Profiles" asp-action="Delete" asp-route-id="@obj.ProfileId"
                               class="btn btn-danger mx-2"> <sapn><i class="bi bi-trash3-fill"></i></sapn> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

