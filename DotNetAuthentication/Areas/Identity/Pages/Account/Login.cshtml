@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Login</h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-3">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Input.Email" class="form-label mt-3">Email address</label>
                <input asp-for="Input.Email" class="form-control" aria-required="true" id="Email" placeholder="Enter email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="form-label mt-3">Password</label>
                <input asp-for="Input.Password" class="form-control" aria-required="true" id="Password" placeholder="Password" autocomplete="off">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mt-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <div class="form-group mt-4 d-flex justify-content-center">
                <input id="login-submit" type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4 d-flex justify-content-center">
    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Here</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
